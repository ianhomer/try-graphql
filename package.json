{
  "name": "try-graphql",
  "version": "1.0.0",
  "description": "Try GraphQL",
  "main": "index.js",
  "scripts": {
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "clean": "trash build test",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "start": "ts-node-dev --respawn --transpileOnly ./src/server.ts | pino-pretty",
    "update": "npx npm-check-updates -u && npm install --package-lock-only --no-audit"
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "fix": "Try to automatically fix any linting problems"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianhomer/try-graphql.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ianhomer/try-graphql/issues"
  },
  "homepage": "https://github.com/ianhomer/try-graphql#readme",
  "dependencies": {
    "@types/express": "^4.17.8",
    "@types/express-graphql": "^0.9.0",
    "@types/graphql": "^14.5.0",
    "@types/pino": "^6.3.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "pino": "^6.6.0",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "lodash": "^4.17.20",
    "minimist": ">=1.2.5",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "trash-cli": "^3.1.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "typescript": "^4.0.2"
  }
}
